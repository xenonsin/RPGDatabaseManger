<UserControl x:Class="RPGDatabaseManager.View.DialogueView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPGDatabaseManager.View"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <!--Three Main Columns-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>
        <!--First Main Column[ItemList and Buttons]-->
        <Grid Grid.Column="0" Margin="0 5 0 0">
            <!--Four rows inside the first main colummn-->
            <Grid.RowDefinitions>
                <RowDefinition Height="8.5*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</UserControl>
